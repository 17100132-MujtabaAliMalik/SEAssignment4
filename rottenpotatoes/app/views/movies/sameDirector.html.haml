-# in app/views/movies/

%h3 Movies with the same director as #{@movie.title}

%table#movies
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
      %th Director
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= movie.director
        %td= link_to "More about #{movie.title}", movie_path(movie)
        
= link_to "Back to movie #{@movie.title}", movie_path(@movie)
= link_to 'Back to movie list', movies_path